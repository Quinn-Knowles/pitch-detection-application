<Window x:Class="pitch_detection_application.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="pitch-detection-application"
        Width="800"
        Height="450">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Instructions -->
        <TextBlock Grid.Row="0"
                   Text="Enter Pitch as whole number between 50–350"
                   FontWeight="Bold"/>

        <!-- Pitch inputs -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,0">
            <TextBlock Text="Maximum:" VerticalAlignment="Center"/>
            <TextBox x:Name="MaxPitchBox" Width="60" Margin="10,0,20,0"/>

            <TextBlock Text="Minimum:" VerticalAlignment="Center"/>
            <TextBox x:Name="MinPitchBox" Width="60" Margin="10,0,0,0"/>
        </StackPanel>

        <!-- Optional features -->
        <TextBlock Grid.Row="2"
                   Text="Optional Features"
                   Margin="0,20,0,5"
                   FontWeight="Bold"/>

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <StackPanel>
                <CheckBox x:Name="SentenceMonitorBox"
                          Content="Sentence Observation"
                          Margin="0,5"/>
                <CheckBox x:Name="SelfMuteBox"
                          Content="Mute mic when outside of range"
                          Margin="0,5"/>
                <CheckBox x:Name="ScoreBox"
                          Content="Calculate a score for the session"
                          Margin="0,5"/>
            </StackPanel>

            <StackPanel Grid.Column="1">
                <CheckBox x:Name="OutOfRangeBox"
                          Content="Outside target range notification"
                          Margin="0,5"/>
                <CheckBox x:Name="ResonanceBox"
                          Content="Resonance monitor"
                          Margin="0,5"/>
            </StackPanel>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="Monitor"
                    Width="100"
                    Margin="0,0,10,0"
                    Click="Monitor_Click"/>
            <Button Content="Mic Test"
                    Width="100"
                    Click="Test_Click"/>
        </StackPanel>
    </Grid>
</Window>
